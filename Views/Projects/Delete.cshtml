@model WebApplication2.Models.Project

@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Scripts/styles.css">
    <title>@ViewBag.Title</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: url('https://websitedemos.net/wordpress-agency-04/wp-content/uploads/sites/98/2019/11/hero-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            padding-top: 70px; /* Ajout du padding-top pour compenser la hauteur de la navbar */
        }

        .navbar {
            overflow: hidden;
            background-color: #333;
            z-index: 2;
            position: fixed;
            width: 100%;
            top: 0;
        }

        .elementor-section.elementor-top-section {
            position: relative;
            z-index: 1;
            margin-top: 90px;
        }

        form {
            width: 80%;
            margin: 20px auto;
            position: relative;
            top: 130px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        input[type="submit"] {
            padding: 5px 10px;
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn {
            padding: 5px 10px;
            text-decoration: none;
            color: white;
            background-color: #007bff;
            border-radius: 3px;
            border: 1px solid #007bff;
        }

            .btn:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="elementor-section elementor-top-section">
        <div class="elementor-container">
            <form method="post">
                @Html.AntiForgeryToken()

                <table border="1">
                    <tr>
                        <td>Project Code:</td>
                        <td>@Html.DisplayFor(model => model.Code)</td>
                    </tr>
                    <tr>
                        <td>Project Description:</td>
                        <td>@Html.DisplayFor(model => model.Description)</td>
                    </tr>
                    <tr>
                        <td>Start Date:</td>
                        <td>@Html.DisplayFor(model => model.StartDate)</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="Delete" class="btn" /> @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>

</body>
</html>
