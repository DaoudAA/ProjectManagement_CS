@model WebApplication2.Models.Task

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Scripts/styles.css">
    <title>@ViewBag.Title</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: url('https://websitedemos.net/wordpress-agency-04/wp-content/uploads/sites/98/2019/11/hero-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            padding-top: 70px; /* Ajout du padding-top pour compenser la hauteur de la navbar */
        }

        .navbar {
            overflow: hidden;
            background-color: #333;
            z-index: 2;
            position: fixed;
            width: 100%;
            top: 0;
        }

        .elementor-section.elementor-top-section {
            position: relative;
            z-index: 1;
            margin-top: 90px;
        }

        form {
            width: 80%;
            margin: 20px auto;
            position: relative;
            top: 130px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        input {
            width: 100%;
            padding: 5px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            border: 1px solid #007bff; /* Couleur de la bordure identique à la couleur de fond */
            border-radius: 3px;
            transition: background-color 0.3s;
        }

            /* Style du bouton au survol */
            .btn:hover {
                background-color: #0056b3;
                border-color: #0056b3; /* Changement de couleur de la bordure au survol */
            }
    </style>
</head>
<body>

    <div class="elementor-section elementor-top-section">
        <div class="elementor-container">
            <form method="post" action="/Tasks/Create">
                @Html.AntiForgeryToken()
                <table>
                    <tr>
                        <td>Task Code:</td>
                        <td>@Html.EditorFor(model => model.Code, new { htmlAttributes = new { @placeholder = "Code", @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td>Task Description:</td>
                        <td>@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @placeholder = "Description", @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td>Start Date:</td>
                        <td>@Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @type = "date", @placeholder = "yyyy-mm-dd", @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td>End Date:</td>
                        <td>@Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @type = "date", @placeholder = "yyyy-mm-dd", @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td>Project:</td>
                        <td>
                            @Html.DropDownListFor(model => model.Project.ID, ViewBag.ProjectId as SelectList, "- Select Project -", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Project.ID, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button type="submit" class="btn btn-primary">Create Task</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>

</body>
</html>

}
