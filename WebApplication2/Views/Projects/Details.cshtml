@model WebApplication2.Models.Project

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h3><strong>@Model.Code</strong> - Project Details</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                <dt>Code:</dt>
                                <dd>@Model.Code</dd>
                                <dt>Description:</dt>
                                <dd>@Model.Description</dd>
                                <dt>Start Date:</dt>
                                <dd>@Model.StartDate.ToShortDateString()</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h4>Tasks</h4>
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Description</th>
                                        <th>Start date</th>
                                        <th>End date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Tasks.Count==0)
                                    {
                                        <p>The project doesn't contain any tasks yet</p>
                                    }
                                    else
                                    {

                                    foreach (var task in Model.Tasks)
                                    {
                                        <tr>
                                            <td>@task.Code</td>
                                            <td>@task.Description</td>
                                            <td>@task.StartDate</td>
                                            <td>@task.EndDate</td>
                                        </tr>
                                    }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Members</h4>
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>User ID</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.Members)
                                    {
                                        <tr>
                                            @if (Model.Manager.UserID == member.UserID)

                                            {
                                                <td>@member.UserID</td>
                                                <td>@member.Name</td>
                                                <td style="font-weight:bold; color: red;">Project manager</td>
                                            }
                                            else
                                            {
                                                <td>@member.UserID</td>
                                                <td>@member.Name</td>
                                                if(Model.Manager.Name == User.Identity.Name)
                                                {                                               
                                                <td>
                                                @Html.ActionLink("Remove member", "removeMember", new { projectId = @Model.ID, id = member.UserID })
                                                </td>
                                                }
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
                        </div>
                        <div class="col-md-6 text-right">
                            @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
